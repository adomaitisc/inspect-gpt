{
  "name": "InspectGPT",
  "description": "Our extension makes it simple to find GPT-generated text on any web page. Just install it and let it scan the page for you.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://inspectgpt.com/*", "http://localhost:3000/*"],
  "permissions": ["activeTab", "tabs"],
  "icons": {
    "16": "inspect-gpt.png",
    "48": "inspect-gpt.png",
    "128": "inspect-gpt.png"
  },
  "action": {
    "default_icon": "inspect-gpt.png",
    "default_popup": "popup.html",
    "default_title": "InspectGPT"
  }
}
